<div id="page-content"> 
        <h1 class="text-center mt-4">ALL ARTICLES</h1>
        <div class="container">
            <% @articles.each do |article| %>     
                    <div class="row justify-content-md-center"> 
                        <div class="col-8 mt-4"> 
                            <div class="card text-center shadow-lg  mb-5 bg-body-tertiary rounded">
                                <div class="card-header fst-italic">
                                            By Bhaskar Yerrolla
                                </div>
                                <div class="card-body">
                                                <h5 class="card-title "> <%= link_to article.title, article_path(article), class: "text-success", style: "text-decoration: none;" %></h5> 
                                                <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                                                <%= link_to "VIEW", article_path(article), class: "btn btn-success" %>
                                                <%= link_to "EDIT", edit_article_path(article), class: "btn btn-warning" %>
                                                <%= link_to "DELETE", article_path(article), data: { turbo_method: :delete, turbo_confirm: "are you sure" }, class: "btn btn-danger" %>
                                </div>
                                <div class="card-footer text-body-secondary">
                                <small> created <%= time_ago_in_words(article.created_at) %> ago 
                                        edited at <%= time_ago_in_words(article.updated_at) %> 
                                </small>    
                                </div>
                            </div>
                        </div>
                    </div>

                    
            <% end %>
        </div> 
    </div>


    





