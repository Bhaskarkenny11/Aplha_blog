<style>
.btn-btn 
</style>
<div class="container">
<% if @article.errors.any? %>
<h2>the following errors prevented to save</h2>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
        <li> <%= error %> </li>
        <% end %>
    </ul>
 <% end %> 
<div class='row justify-content-center'>
 <div class='col-10'>
 <%= form_with(model: @article, class: "shadow-lg p-3 mb-3 bg-info rounded ", local: true) do |f| %>

        <div class="form-group row">
            
            <%= f.label :TITLE, class: "col-2 col-form-label " %>
                <div class="col-10">
                <%= f.text_field :title, class: "form-control shadow rounded" %>
                </div>
            </div>

            <div class="form-group row">

                <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
                    </div>
            </div>
            <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg mx-auto d-block", style: "width: 30%;" %>
            </div>
        <% end %>
   </div> 
   <br>
   <%= link_to "Cancel and Return to Articles", articles_path, class: "btn btn-outline-light mx-auto d-block", style: "width: 40%;" %>

</div>
 </div>